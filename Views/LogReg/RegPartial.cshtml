@model WeddingPlanner.Models.RegisterViewModel;
@using WeddingPlanner.Models; 

<h1>Register</h1>

      @{
          if(!(ViewBag.errors is null))
          {
            foreach (var error in ViewBag.errors)
            {
                if(@error.Errors.Count > 0 )
                {
                    <p>@error.Errors[0].ErrorMessage</p>
                }
            }
          }
          @ViewBag.err 
      }


<div>
    <form asp-controller="LogReg" class="form-horizontal" asp-action="Registration" method="POST" >
        <span asp-validation-for="IsUnique"></span>
        <div class="form-group">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName" class="col-sm-2 control-label">FirstName</label>
            <div class="col-sm-3">
             <input asp-for="FirstName" class="form-control" placeholder="FirstName"/>
            </div>
        </div>
        
        <div class="form-group">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName" class="col-sm-2 control-label">LastName</label>
            <div class="col-sm-3">
                <input asp-for="LastName" class="form-control" placeholder="LastName"/>
            </div>
        </div>

        <div class="form-group">
            <span asp-validation-for="Email"></span>        
            <label asp-for="Email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-3">
                <input asp-for="Email" class="form-control"  placeholder="Email" name="Email">
            </div>
        </div>

        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-3">
                <input asp-for="Password" class="form-control"  placeholder="Password" name="Password">
            </div>
        </div>

        <div class="form-group">
            <span asp-validation-for="PasswordConfirmation"></span>
            <label asp-for="PasswordConfirmation" class="col-sm-2 control-label">Confirm Password</label>
            <div class="col-sm-3">
                <input asp-for="Password" class="form-control"  placeholder="Confirmation Password" name="PasswordConfirmation">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                <input type="checkbox"> Remember me
                </label>
            </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Submit">
            </div>
        </div>
    </form>